{% extends 'admin/base.html.twig' %}

{% block title %}Admin!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			max-width: 800px;
			font: 18px / 1.5 sans-serif;
		}
	</style>
	<div class="example-wrapper container text-center mt-3">
		<h1>Administration!</h1>

		{% for message in app.flashes('notice') %}
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				{{ message }}
				<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
			</div>
		{% endfor %}

		<div class="mt-5">
			<div>
				<a href="{{ path('admin_article_list') }}" class="btn btn-outline-dark w-50 m-2">Gerer les articles</a>
			</div>
			<div>
				<a href="{{ path('admin_writer_list') }}" class="btn btn-outline-dark w-50 m-2">Gerer les auteurs</a>
			</div>
			<div>
				<a href="{{ path('admin_category_list') }}" class="btn btn-outline-dark w-50 m-2">Gerer les categories</a>
			</div>
			<div>
				<a href="{{ path('admin_image_list') }}" class="btn btn-outline-dark w-50 m-2">Gerer les images</a>
			</div>
			<div>
				<a href="{{ path('main') }}" class="btn btn-dark w-50 m-2">Accueil</a>
			</div>

		</div>
	</div>
{% endblock %}
