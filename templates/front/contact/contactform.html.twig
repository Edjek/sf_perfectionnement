{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block body %}

	<div class="container">
	<h1>Contact</h1>
		<div class="mt-5 mb-3">
			<a href="{{ path('main') }}" class="btn btn-outline-primary">
				Accueil
			</a>
		</div>

		{{ form_start(contactForm) }}
		<div class="form m-auto w-50">
			<div class="mb-3">
				{{ form_label(contactForm.email, 'Email : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
				{{ form_widget(contactForm.email, {'attr' : {'class' : 'form-control'} } ) }}
			</div>

			<div class="mb-3">
				{{ form_label(contactForm.subject, 'Objet : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
				{{ form_widget(contactForm.subject, {'attr' : { 'class' : 'form-control'} } ) }}
			</div>

			<div class="mb-3">
				{{ form_label(contactForm.message, 'Message : ', {'label_attr' : { 'class' : 'form-label' } } ) }}
				{{ form_widget(contactForm.message, {'attr' : { 'class' : 'form-control'} } ) }}
			</div>

			{{ form_widget(contactForm.envoyer, { 'attr' : {'class' : 'btn btn-outline-primary'} } ) }}

			{{ form_end(contactForm) }}
		</div>
	</div>

{% endblock %}
